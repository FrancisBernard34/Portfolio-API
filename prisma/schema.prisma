generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String
  technologies String[]
  imageUrl     String
  liveUrl      String?
  githubUrl    String?
  featured     Boolean    @default(false)
  importance   Int        @default(0)
  categories   Category[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@map("projects")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum Role {
  USER
  ADMIN
}

enum Category {
  FULL_STACK
  FRONT_END
  API
  MOBILE
  GAME
}
